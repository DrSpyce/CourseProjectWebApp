@model List<CourseProjectWebApp.Models.Collection>

@{
	ViewData["Title"] = "Index";
}

@if (Model.Count == 0)
{
	<h1 class="fs-3">No collections created yet</h1>
}
else
{
	<h1 class="fs-4">Here is list of all Collections:</h1>
	<div class="list-group">
		@foreach (var item in Model)
		{
			<a asp-action="Details" asp-route-id="@item.Id" class="list-group-item list-group-item-action" aria-current="true">
				<div class="ms-2 me-auto">
					<div class="fw-bold fs-3">@item.Title</div>
					Topic: @item.Topic
				</div>
			</a>
		}
	</div>
}
